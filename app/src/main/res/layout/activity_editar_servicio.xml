<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.activitiesServicio.EditarServicio">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="EdiciÃ³n del Servicio"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Nuevo nombre del Servicio:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/etNewNombreServicio"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/etNewNombreServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/tvOldNombreServicio"
        app:layout_constraintStart_toStartOf="@+id/tvOldNombreServicio"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etNewPrecioServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/etNewNombreServicio"
        app:layout_constraintStart_toStartOf="@+id/etNewNombreServicio"
        app:layout_constraintTop_toBottomOf="@+id/etNewNombreServicio" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Nuevo precio del Servicio:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/etNewPrecioServicio"
        app:layout_constraintStart_toStartOf="@+id/textView6" />

    <Button
        android:id="@+id/btnGuardarServicio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D73A4B"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/etNewPrecioServicio"
        app:layout_constraintStart_toStartOf="@+id/etNewPrecioServicio"
        app:layout_constraintTop_toBottomOf="@+id/etNewPrecioServicio" />

    <Button
        android:id="@+id/btnCancelarServicio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D73A4B"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btnGuardarServicio"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/btnGuardarServicio"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarServicio" />

    <TextView
        android:id="@+id/tvOldNombreServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Antiguo Nombre"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>